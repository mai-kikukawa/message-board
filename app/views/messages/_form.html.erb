<%= form_for @message, html: {class: 'form-horizontal'} do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label for="InputName" class="col-sm-2 control-label text-right">名前</label>
    <div class="col-sm-10">
      <%= f.text_field :name, id: "InputName", class: "form-control form_naco", placeholder: "name" %>
    </div>
  </div>

  <div class="form-group">
    <label for="InputAge" class="col-sm-2 control-label text-right">年齢</label>
    <div class="col-sm-2">
      <%= f.text_field :age, id: "InputAge", class: "form-control form_naco", placeholder: "age" %>
    </div>
  </div>

  <div class="form-group">
    <label for="InputComment" class="col-sm-2 control-label text-right">内容</label>
    <div class="col-sm-10">
      <%= f.text_area :body, id: "InputComment", class: "form-control form_naco", cols: 10, rows: 5, placeholder: "comment"%>
    </div>
  </div>

  <div class="form-group sub_btn">
    <div class="col-sm-offset-6 col-sm-6">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>